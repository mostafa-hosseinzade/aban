{% extends 'ShopBundle::base.html.twig' %}

{% block body -%}
    <h1>product list</h1>

    <table class="records_list">
        <thead>
            <tr>
                <th>Name</th>
                <th>Keyword</th>
                <th>Price</th>
                <th>Productno</th>
                <th>Photo</th>
                <th>Creatat</th>
                <th>Descr</th>
                <th>Id</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('product_show', { 'id': entity.id }) }}">{{ entity.name }}</a></td>
                <td>{{ entity.keyword }}</td>
                <td>{{ entity.price }}</td>
                <td>{{ entity.productNo }}</td>
                <td>{{ entity.photo }}</td>
                <td>{% if entity.creatAt %}{{ entity.creatAt|date('Y-m-d H:i:s') }}{% endif %}</td>
                <td>{{ entity.descr }}</td>
                <td>{{ entity.id }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('product_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('product_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('product_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
    {% endblock %}
